    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["${input:command}", "${input:arg}"],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Launch with specific md file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["${input:markdownfile}","${input:command}", "${input:arg}"],
            "envFile": "${workspaceFolder}/.env"
        }
    ],
    "inputs": [
        {
            "id": "markdownfile",
            "type": "promptString",
            "description": "The Markdown file",
            "default": "demo.md"
          },
          {
            "id": "command",
            "type": "promptString",
            "description": "Command name",
            "default": "cmd1"
          },
          {
            "id": "arg",
            "type": "promptString",
            "description": "arg for command",
            "default": ""
          }
  
        ]
}